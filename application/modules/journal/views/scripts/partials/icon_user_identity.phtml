<?php
/**
 * User identity icon partial
 * Displays user avatar using the UserAvatar view helper
 *
 * Parameters:
 * - $user: array or object with user data (optional, uses $this->user if not set)
 * - $size: avatar size (optional, defaults to 'initials')
 */

// Extract variables from $this if they're not already set
if (!isset($user) && isset($this->user)) {
    $user = $this->user;
}
if (!isset($size)) {
    $size = $this->size ?? 'initials';
}

if (isset($user)):
    echo $this->userAvatar($user, $size);
endif;